<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookBorrowApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/blue_dark2</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt
        </item>
        <item name="boxStrokeColor">@drawable/selector_box_strok</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_14sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_14sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_14sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_14sdp</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
    </style>

    <style name="roundedCornersImageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item>

    </style>

    <style name="NavigationView">
        <item name="fontFamily">@font/vazir_medium</item>

    </style>
</resources>